<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.activities.HomePageActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/welcome_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Welcome Lior!"
        android:textSize="25sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.109" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/make_order_button"
        android:layout_width="@dimen/home_page_button_size"
        android:layout_height="@dimen/home_page_button_size"
        android:text="@string/make_order"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/see_orders_button"
        app:layout_constraintHorizontal_bias="0.218"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.315"
        android:background="@color/colorAccent"
        android:textColor="#ffffff"
        android:textStyle="bold"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/see_orders_button"
        android:layout_width="@dimen/home_page_button_size"
        android:layout_height="@dimen/home_page_button_size"
        android:text="@string/see_orders"
        app:layout_constraintBottom_toBottomOf="@+id/make_order_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.871"
        app:layout_constraintStart_toEndOf="@id/make_order_button"
        app:layout_constraintTop_toTopOf="@+id/make_order_button"
        app:layout_constraintVertical_bias="0.315"
        android:background="@color/colorAccent"
        android:textColor="#ffffff"
        android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>